<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt -4">
        <h1 class = "container mt-3 mb- 3"><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="250px"alt="" class="mt-3">
        <p class = "container mt-3"><%= blog.body %></p>
    </div>

    <div class="container mt -4"> 
        <pre>By <%= blog.createdBy.fullName %>
        </pre>
    </div>


    <div class="container mt-3">
        <h1>Comments (<%= comments.length %>)</h1>
    <% if (locals.user) { %>
            <form action = "/blog/comment/<%=blog._id%>" method="post"> 
                <div class="mt-3 mb-2">
                  <input type="text" name="content" class="form-control" id="content" 
                  aria-describedby="emailHelp" placeholder="Comment Here">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
        </div>
    <% } %>

    <div class="container mt-3">
       <% comments.forEach(comment => { %>
            <%= comment.createdBy.profileImageURL%><%= comment.createdBy.fullName %><pre><%= comment.content %></pre>
       <% }) %>
    </div>

    <%- include('./partials/scripts') %>
</body>
</html> 